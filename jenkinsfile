//https://www.jenkins.io/doc/book/pipeline/docker/
//Read this to get a clear understanding of the concepts used in this pipeline.

pipeline {
    agent any 

    environment{
        dockerhubUsername = credentials('docker-hub-username')
        dockerhubPassword = credentials('docker-hub-password')
        dockerImageName = "smartnotes:1.0"
        dockerhubRepository = "ujjwaldotcom/smartnotes"
        dockerhubVersion = "1.0"
    }

    tools{
        dockerTool 'Docker'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'Fetching from GitHub..'
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Ujjwaldotcom/Django-Proj.git']])
            }
        }
        
        stage('Build'){
            steps{
                script{
                    echo 'Building docker image..'
                    url: 'https://github.com/Ujjwaldotcom/Django-Proj.git'
                    def dockerImage = docker.build("${dockerImageName}", "-f dockerfile .")

                    echo 'Tagging docker Image..'
                    dockerImage.tag() = ("${dockerRepository} : ${dockerhubVersion}")
                }
            }
        }
        
        stage('Deploy'){
            agent{
                dockerfile true
            }
            steps{
                echo 'Deploying to container..'
                def dockerContainer = docker.image("${dockerRepository}:${dockerhubVersion}").run("-p 8000:80", "--name smartnotes")
                echo 'Run the application on - http://smartnotes:8000/'
            }
        }

        stage('Manual Approval') {
            steps {
                script {
                    echo 'Waiting for manual approval...'
                    input message: 'Approve to proceed?', submitter: 'admin'
                }
            }
        }

        stage('Push Image to Docker Hub Repository') {
            steps {
                script {
                    echo 'Pushing to Docker Hub...'
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        // Push the image to Docker Hub
                        docker.image("${dockerRepository}:${dockerhubVersion}").push()
                    }
                }
            }
        }
    }
}
